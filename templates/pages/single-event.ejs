<!DOCTYPE html>
<html itemscope itemtype="http://schema.org/Article">
    <%- include ../partials/head %>
  <body class="<%= season %>-page">
    <%- include ../partials/nav %>

    <section class="full-page">
      <div class="logo">
        <img src="assets/logo.png">
      </div>
      
	<% if(event.logo == 'assets/logos/loonmountain.png') { %>
	  <div class="logo-sponsor">
		<h1>TITLE SPONSOR</h1>
		<a href="http://www.newenglandcoastalrealty.com" target="_blank"><img src="assets/logos/kellerwilliams.png"></a>
	  </div>
	  
	<% } %>      
     
      <div class="header">
        <h1><%= event.title %></h1>
        <% if(event.logo == 'assets/logos/loonmountain.png') { %>
        	<h1>USATF MOUNTAIN RUNNING CHAMPIONSHIPS</h1>
        <% } %>    
      </div>
      <article class="top-wrapper-article">
        <div class="race-image" style="background-image: url(<%= event.image %>);">
          <img src="<%= event.logo %>"> 
        <% if(event.logo == 'assets/logos/loonmountain.png') { %>
          <!-- <img style="float:right;" src="assets/logos/USATF_2016_Logo.png">-->
        <% } %> 

        <% if(event.logo == 'assets/logos/loonmountain.png') { %>
          <!-- <img style="position:absolute;bottom:4px;right:4px;" src="assets/logos/CRA-Logo.jpg"> -->
        <% } %>   

        <!-- GSTC.png for Granite State Trail Cup -->
        <% if(event.key == 'ralphWaldo' || event.key == 'exeterTrail' || event.key == 'vulcansFury') { %>
          <img style="position:absolute;bottom:4px;left:4px;" src="assets/logos/GSTC.png">
        <% } %>    

        <!-- GSMC.png for Granite State Mountain Cup -->
        <% if(event.key == 'brettonWoods') { %>
          <img style="position:absolute;bottom:4px;right:4px;" src="assets/logos/GSMC.png">
        <% } %>  

        <% if(event.key == 'loonMountainRace') { %>
          <img style="position:absolute;bottom:4px;right:4px;" src="assets/logos/GSMC.png">
        <% } %>                       
         
        </div>
        <div class="race-details">
          <h5><i class="fa fa-calendar"></i> date</h5>
          <p><%= event.date %></p>
          <h5><i class="fa fa-map-marker"></i> address:</h5>
          <p><% if(event.address) { %><%= event.address %></br><% } %>
            <%= event.address2 %></br>
            <%= event.city %>, <%= event.state %></br>
            <a class="directions" href="http://maps.google.com?q=<%= event.address2 + '+' + event.city + '+' + event.state %>" target="_new">
              <i class="fa fa-compass"></i>Open in Google Maps</a>
          </p>

          <h5><i class="fa fa-line-chart"></i> distance:</h5>
          <p><%= event.distance %></p>
          <h5><i class="fa fa-clock-o"></i> start time:</h5>
          <p><%= event.starttime %></p>
          <h5><i class="fa fa-clock-o"></i> bib pick-up:</h5>
          <p><%= event.bibtime %></p>
          <h5><i class="fa fa-usd"></i> cost:</h5>
          <p><%= event.cost %></p>
        </div>
      </article>
      <article>
        <div class="button-wrapper reg-<%= event.registrationStatus %>">
          <p>Online Registration <%= event.registrationStatus %></p>
          <% if(event.registrationStatus != 'closed') { %>
          <i class="fa fa-chevron-right"></i>
          <a href="<%= event.registrationLink %>" target="_new">
            <img src="assets/logos/runreg.png">
          </a>
          <% } %>
        </div>
        <% include ../partials/mailchimp %>
      </article>
      <article>
        <h5><i class="fa fa-users"></i> race director(s):</h5>
        <p><%= event.directorname %></p>
        <h5><i class="fa fa-envelope"></i> email</h5>
        <p><%= event.directoremail %></p>
        <h5><i class="fa fa-user"></i> designer</h5>
        <p><%= event.designer %></p>
      </article>
      <article>
        <h4>details</h4>
        
        <% if(event.logo == 'assets/logos/loonmountain.png') { %>   
        	<!--<p class="no-extra-padding">
        	While the USATF Mountain Running & Collegiate Mountain Running National Championships are a national championship event, runners of all ages & abilities are invited to participate. The Top 6 men and the Top 4 women USATF members and US Citizens will earn automatic berths on the 2016 US Mountain Running Team.  This race is an official USA Track & Field National Championships and the sole selection race for the US Mountain Running Team and the <strong><a href ="http://www.wmra.ch/index.php?option=com_content&task=view&id=850&Itemid=75" target=_blank>World Mountain Running Championships</a></strong>.</p>
        	<h5>Prize Money</h5>
        	<p class="no-extra-padding">*To be eligible for USATF prize money, you must be a USA citizen and have a current, valid USATF membership number. To become a member or renew your membership online, visit <strong><a href="http://www.usatf.org" target=_blank>www.usatf.org</a></strong>. To see more info on USA Championship eligibility criteria, see USATF website.</p>
        	<p class="no-extra-padding">*To be eligible for Collegiate prize money, you must have taken at least one (1) college course between January 1, 2015 and July 25, 2015. To see more info on Collegiate Championship eligibility criteria, see Collegiate Running Association website.</p>
		-->
	<% } %>     
        
        <% event.details.forEach(function(content) { %>
        <% if(content.image) {%>
          <img class="sponsor-image" src="<%= content.image %>">
        <% } %>
            <h5><%= content.title %></h5>
            <p class="no-extra-padding"><%= content.copy %></p>
        <% }); %>
        <% if(season == 'winter') { %>
          <div class="winter-advisory">
            <h5>Note:</h5>
            <p class="no-extra-padding">*SPECIAL WINTER WEATHER ANNOUCEMENT*</p>

            <p class="no-extra-padding">Updated 09/17/2009</p>

            <p class="no-extra-padding">New Hampshire winter weather can be very unpredictable and occasionally make travel hazardous. For the safety of our volunteers, competitors, and family a final determination on the status of our races will be made the Thursday prior to each race. The status of the race ("ON" or "POSTPONED") will be detailed on each individual race webpage. You must check each race webpage prior to the race to assure the race will be held. Every attempt will be made to reschedule all postponed events. Pre-registered competitors will be given a refund or rain check. </p>
          </div>
        <% } %>
      </article>
      <% if(event.video) { %>
      <article>
        <h4>Video</h4>
        <iframe width="100%" height="350" src="<%= event.video %>" frameborder="0" allowfullscreen></iframe>
      </article>
      <% }; %>
      
      <% if(event.coursemaps) { %>
        <article>
          <h4>Course Map(s)</h4>
          <% event.coursemaps.forEach(function(map) { %>
            <a href="<%= map.image %>" target="_blank">
              <img src="<%= map.thumb %>" class="course-map">
            </a>
          <% }); %>
        </article>
      <% }; %>
      
      <% if(event.logo == 'assets/logos/loonmountain.png') { %>
	   <!--<article>
		<h4>race course - 3-D model</h4>
		<iframe width="100%" height="480" src="https://sketchfab.com/models/83406c540be64b74a63731c060908580/embed?autostart=1" frameborder="0" allowfullscreen mozallowfullscreen="true" webkitallowfullscreen="true" onmousewheel=""></iframe>
	  </article>-->
      <% } %>     

      <% if(event.standings) { %>
      <article class="standings-btn-wrapper">
        <h5>Series Standings</h5>
        <a href="<%= event.standings %>" target="_blank">
          <button>Click here</button>
        </a>
      </article>
      <% }; %>
      <article class="event-links-footer">
        <ul>
          <% if(event.galleryUrl) { %>
          <li>
            <p>Photo Gallery</p>
            <a href="<%= event.galleryUrl %>" target="_blank">
              <i class="fa fa-camera-retro"></i>
            </a>
          </li>
          <% } %>

          <% if(event.galleryUrl) { %>
          <li>
            <p><%= event.resultsYear %> Results</p>
            <a href="<%= event.resultsUrl %>" target="_blank">
              <i class="fa fa-bar-chart"></i>
            </a>
          </li>
          <% } %>
        </ul>
      </article>
      <hr>
      <%- include ../partials/add-this %>
    </section>

    <%- include ../partials/footer %>
    <%- include ../partials/scripts %>
  </body>
</html>
